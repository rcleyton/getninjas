<h2>Entrar</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-signin") do |f| %>
  <div class="form-label-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email",
    placeholder: 'Email', class: "form-control" %><br/>
  </div>

  <div class="form-label-group">
    <%= f.password_field :password, autocomplete: "current-password",
    placeholder: 'Senha', class: "form-control" %><br/>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="checkbox mb-3">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, 'Lembrar-me' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Entrar",  class: "btn btn-lg btn-dark btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
