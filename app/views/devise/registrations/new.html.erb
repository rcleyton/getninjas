<h2>Cadastrar</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-label-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email",
    placeholder: 'Email', class: "form-control" %><br/>
  </div>

  <div class="form-label-group">
    <%= f.password_field :password, autocomplete: "new-password",
    placeholder: 'Senha com mÃ­nimo 6 caracteres', class: "form-control" %>
  </div><br/>

  <div class="form-label-group">
    <%= f.password_field :password_confirmation, autocomplete: "new-password",
    placeholder: 'Repita a senha', class: "form-control" %><br/>
  </div>

  <div class="form-label-group">
    <%= f.label :role, 'Cadastrar como:' %>
    <%= f.select(:role, [['Cliente', 'customer'], 
                         ['Profissional', 'professional']]) %>
  </div>

  <div class="actions">
    <%= f.submit "Cadastrar", class: "btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
